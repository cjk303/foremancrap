# Foreman login site with custom cert
server {
    listen 443 ssl http2;
    server_name foreman.epiqcorp.com;

    ssl_certificate     /etc/pki/custom/login.fullchain.crt;
    ssl_certificate_key /etc/pki/custom/login.key;

    ssl_protocols       TLSv1.2 TLSv1.3;
    ssl_ciphers         HIGH:!aNULL:!MD5;

    location / {
        proxy_pass https://127.0.0.1:8443;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_ssl_verify off;
    }
}

# Katello and pulp site with Katello cert
server {
    listen 443 ssl http2;
    server_name p054lnxfore01.epiqcorp.com;

    ssl_certificate     /etc/pki/katello/certs/katello-apache.fullchain.crt;
    ssl_certificate_key /etc/pki/katello/private/katello-apache.key;

    ssl_protocols       TLSv1.2 TLSv1.3;
    ssl_ciphers         HIGH:!aNULL:!MD5;

    location / {
        proxy_pass https://127.0.0.1:8443;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_ssl_verify off;
    }
}
